@page
@model TaskManager.Web.Pages.Tasks.ListModel
@{
    ViewData["Title"] = "List";
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-success">
                @Model.Message
            </div>
        </div>
    </div>
}
<div class="row" style="margin-bottom:10px;margin-top:10px;">
    <div class="col-sm-12">
        <a class="btn btn-primary" asp-page="./Create"><i class="fa fa-plus"></i></a>
    </div>
</div>
<partial name="_ListSearchPartial" model="Model" />
@foreach (var item in Model.TaskItems)
{
    <partial name="_ListItemPartial" model="item" />
}

