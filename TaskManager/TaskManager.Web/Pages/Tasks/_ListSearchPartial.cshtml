@model TaskManager.Web.Pages.Tasks.ListModel
<form class="row" method="get">
    <div class="col-sm-12">
        <div class="input-group">
            <input type="text" asp-for="SearchTerm" autocomplete="off" class="form-control" id="searchTerm" name="searchTerm" placeholder="Enter Title" />
            <div class="input-group-append">
                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <span asp-validation-for="SearchTerm"></span>
    </div>
</form>