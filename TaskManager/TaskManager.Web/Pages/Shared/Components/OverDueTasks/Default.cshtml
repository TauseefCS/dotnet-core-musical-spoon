@model IEnumerable<TaskManager.Core.Models.TaskItem>

<div class="card" style="margin-bottom:10px;max-height:400px;">
    <div class="card-header">
        <h5>Overdue Tasks</h5>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-page="/Tasks/Detail" asp-route-taskId="@item.Id">@item.Title</a>
            </li>
        }
    </ul>
</div>
